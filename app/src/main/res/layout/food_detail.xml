<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:fitsSystemWindows="true">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFF"
            android:elevation="0dp"
            android:minHeight="?attr/actionBarSize">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Quay lại"
                android:padding="8dp"
                android:src="@drawable/back_icon" />

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_margin="16dp"
                android:src="@drawable/star_outline"
                android:contentDescription="Yêu thích"/>


        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">


            <ImageView
                android:id="@+id/imgFoodDetail"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                android:contentDescription="Ảnh món ăn"
                android:background="@drawable/rounded_top_bg"
                android:elevation="4dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvFoodNameDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phở"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#222222"
                        android:gravity="center"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/tvCategoryDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Danh mục: Món miền Bắc"
                        android:textSize="16sp"
                        android:textColor="#6C757D"
                        android:gravity="center"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tvDescriptionDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mô tả món ăn"
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:backgroundTintMode="src_in"
                        android:elevation="2dp"
                        android:lineSpacingExtra="6dp"
                        android:background="@drawable/rounded_bg" />

                    <TextView
                        android:id="@+id/tvMaterial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nguyên liệu: "
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="#F6F6F6"
                        android:backgroundTintMode="src_in"
                        android:elevation="2dp"
                        android:lineSpacingExtra="6dp"
                        android:background="@drawable/rounded_bg" />

                    <TextView
                        android:id="@+id/tvRecipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Công thức: "
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:padding="12dp"
                        android:backgroundTint="#F6F6F6"
                        android:backgroundTintMode="src_in"
                        android:elevation="2dp"
                        android:lineSpacingExtra="6dp"
                        android:background="@drawable/rounded_bg" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:text="Sửa"
                    android:backgroundTint="#FFC107"
                    android:textColor="#FFF"
                    app:cornerRadius="24dp"/>

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:text="Xóa"
                    android:backgroundTint="#F44336"
                    android:textColor="#FFF"
                    app:cornerRadius="24dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
